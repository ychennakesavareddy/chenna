<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IgniteUI.Blazor.Trial" Version="22.2.50" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Shared/Home.razor.css" CssScope="home-scope" />
    <None Update="Pages/Home/Login.razor.css" CssScope="login-scope" />
    <None Update="Pages/Home/Resetpassword.razor.css" CssScope="resetpassword-scope" />
    <None Update="Pages/Home/Setnewpassword.razor.css" CssScope="setnewpassword-scope" />
    <None Update="Pages/Home/Signup.razor.css" CssScope="signup-scope" />
    <None Update="Shared/InApp.razor.css" CssScope="in-app-scope" />
    <None Update="Pages/InApp/Dashboard.razor.css" CssScope="dashboard-scope" />
    <None Update="Pages/InApp/Articles.razor.css" CssScope="articles-scope" />
  </ItemGroup>

</Project>
