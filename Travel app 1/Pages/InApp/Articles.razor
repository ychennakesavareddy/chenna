@code {
    private TravelApp.ArticlesSource1Type[] travelAppArticlesSource1 = Array.Empty<TravelApp.ArticlesSource1Type>();
    private TravelApp.ArticlesSource2Type[] travelAppArticlesSource2 = Array.Empty<TravelApp.ArticlesSource2Type>();
    private TravelApp.ArticlesSource3Type[] travelAppArticlesSource3 = Array.Empty<TravelApp.ArticlesSource3Type>();
    private TravelApp.ArticlesSource4Type[] travelAppArticlesSource4 = Array.Empty<TravelApp.ArticlesSource4Type>();
    private TravelApp.SelectedArticlesType[] travelAppSelectedArticles = Array.Empty<TravelApp.SelectedArticlesType>();

    protected override async Task OnInitializedAsync()
    {
        travelAppArticlesSource1 = await this.travelAppService.GetArticlesSource1() ?? travelAppArticlesSource1;
        travelAppArticlesSource2 = await this.travelAppService.GetArticlesSource2() ?? travelAppArticlesSource2;
        travelAppArticlesSource3 = await this.travelAppService.GetArticlesSource3() ?? travelAppArticlesSource3;
        travelAppArticlesSource4 = await this.travelAppService.GetArticlesSource4() ?? travelAppArticlesSource4;
        travelAppSelectedArticles = await this.travelAppService.GetSelectedArticles() ?? travelAppSelectedArticles;
    }
}
