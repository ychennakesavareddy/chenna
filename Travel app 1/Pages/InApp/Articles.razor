@page "/in-app/articles"
@inject TravelApp.TravelAppService travelAppService

<div class="row-layout articles-container">
    <div class="row-layout group">
        <div class="row-layout group_1">
            <div class="column-layout group_2">
                <h6 class="h6">
                    All articles
                </h6>
                <div class="row-layout group_3">
                    <div class="column-layout group_4">
                        @foreach (var item in travelAppArticlesSource1)
                        {
                            <IgbCard Outlined="true" class="card" articles-scope>
                                <IgbCardMedia class="media-content" articles-scope>
                                    <img src="@item.Image_url" class="image" />
                                </IgbCardMedia>
                                <IgbCardHeader>
                                    <h3 slot="title">
                                        @item.Title
                                    </h3>
                                    <h5 slot="subtitle">
                                        @item.Subtitle
                                    </h5>
                                </IgbCardHeader>
                                <IgbCardActions class="actions-content" articles-scope>
                                    <IgbIconButton Variant="IconButtonVariant.Flat">
                                        <span class="material-icons">
                                            bookmark_border
                                        </span>
                                        <IgbRipple></IgbRipple>
                                    </IgbIconButton>
                                    <IgbIconButton Variant="IconButtonVariant.Flat">
                                        <span class="material-icons">
                                            share
                                        </span>
                                        <IgbRipple></IgbRipple>
                                    </IgbIconButton>
                                    <IgbButton Variant="ButtonVariant.Flat" class="button" articles-scope>
                                        Read
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                </IgbCardActions>
                            </IgbCard>
                        }
                    </div>
