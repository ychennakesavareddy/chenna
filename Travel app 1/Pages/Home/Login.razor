@page "/"
@inject NavigationManager NavigationManager

<div class="row-layout login-container">
    <div class="column-layout left">
        <div class="column-layout form">
            <div class="column-layout group">
                <div class="column-layout group_1">
                    <h3 class="h3">
                        Login
                    </h3>
                    <p class="typography__body-2 text">
                        Please, login so you can access all applications features.
                    </p>
                </div>
                <IgbInput Label="Email" Placeholder="myname@website.com" Outlined="true" class="input" login-scope></IgbInput>
                <IgbInput Label="Password" Placeholder="Min 8 characters" Outlined="true" class="input" login-scope></IgbInput>
                <div class="row-layout group_2">
                    <IgbCheckbox LabelPosition="CheckboxBaseLabelPosition.After" Checked="true" Indeterminate="false" class="checkbox" login-scope>
                        Remember me
                    </IgbCheckbox>
                    <a class="typography__body-2 hyperlink" @onclick="@(e => Navigate("resetpassword"))">
                        Forgot password?
                    </a>
                </div>
                <IgbButton @onclick="@(e => Navigate("in-app"))" class="button" login-scope>
                    log in
                    <IgbRipple></IgbRipple>
                </IgbButton>
            </div>
            <div class="column-layout group_3">
                <IgbButton Variant="ButtonVariant.Outlined" @onclick="@(e => Navigate("signup"))" class="button_1" login-scope>
                    Don't have a registration? Sign up now!
                    <IgbRipple></IgbRipple>
                </IgbButton>
            </div>
        </div>
    </div>
    <div class="column-layout right"></div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
